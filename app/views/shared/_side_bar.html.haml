.side
  .header
    %h3.header__contents
      = current_user.name
    %ul.header__lists
      %li.list
        = link_to new_group_path do
          = icon('far', 'edit', class: "create_btn")
      %li.list
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cogs', class: "create_btn")

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__new-message
            = group.show_last_message